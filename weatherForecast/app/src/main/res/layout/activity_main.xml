<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlay"
        android:weightSum="10">

        <EditText
            android:id="@+id/searchText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="9"
            android:hint="Nhập tên thành phố" />
        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_search"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin thời tiết"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/linearlay"
        android:textAlignment="center"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thành phố:"
        android:layout_below="@id/textview"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/countryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quốc gia:"
        android:layout_below="@id/cityName"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/status"
        android:textAlignment="center"
        android:layout_toLeftOf="@id/imageViewWeather"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/countryName"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_below="@id/temperature"
        android:textAlignment="center"
        android:layout_toLeftOf="@id/imageViewWeather"
        android:textSize="30dp"
        />
    <ImageView
        android:id="@+id/imageViewWeather"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/status"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        android:src="@drawable/question"/>
    <ImageView
        android:id="@+id/imageViewHumidity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageViewWeather"
        android:scaleType="fitCenter"
        android:src="@drawable/humidity"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textViewHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewWeather"
        android:text="Humidity"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_toRightOf="@id/imageViewHumidity"
        android:textSize="40dp"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/imageViewCloud"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageViewHumidity"
        android:scaleType="fitCenter"
        android:src="@drawable/cloud"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textViewCloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloud"
        android:textAlignment="center"
        android:layout_below="@id/textViewHumidity"
        android:layout_toRightOf="@id/imageViewCloud"
        android:textSize="40dp"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/imageViewWind"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageViewCloud"
        android:scaleType="fitCenter"
        android:src="@drawable/wind"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textViewWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:layout_below="@id/textViewCloud"
        android:textAlignment="center"
        android:layout_toRightOf="@id/imageViewWind"
        android:textSize="40dp"
        android:layout_margin="5dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/anotherDay"
        android:layout_alignParentBottom="true"
        android:text="Xem những ngày khác"/>
</RelativeLayout>