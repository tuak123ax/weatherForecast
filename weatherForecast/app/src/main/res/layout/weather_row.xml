<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="NgÃ y"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempRow"
        android:layout_below="@id/textViewTime"
        android:text="Temp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusRow"
        android:layout_below="@id/tempRow"
        android:text="Status"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewWea"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/imageViewHumidityRow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/humidity"
        android:layout_below="@id/imageViewWea"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textViewHumidityRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textAlignment="center"
        android:layout_below="@id/imageViewWea"
        android:layout_toRightOf="@id/imageViewHumidityRow"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/imageViewCloudRow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/imageViewWea"
        android:layout_toRightOf="@id/textViewHumidityRow"
        android:scaleType="fitCenter"
        android:src="@drawable/cloud"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textViewCloudRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloud"
        android:textAlignment="center"
        android:layout_below="@id/imageViewWea"
        android:layout_toRightOf="@id/imageViewCloudRow"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/imageViewWindRow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/imageViewWea"
        android:layout_toRightOf="@id/textViewCloudRow"
        android:scaleType="fitCenter"
        android:src="@drawable/wind"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textViewWindRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:layout_below="@id/imageViewWea"
        android:layout_toRightOf="@id/imageViewWindRow"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
</RelativeLayout>